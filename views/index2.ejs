<%- include('partials/header'); %>

<head>
  <script src="/socket.io/socket.io.js"></script>
  <!-- Bootstrap core CSS -->
  <style media="screen">
    html,
    body {
      height: 100%;
      width: 100%;
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background: #1c1e22;
    }

    ::-webkit-scrollbar {
      width: 4px;
    }

    ::-webkit-scrollbar-thumb {
      background-color: #4c4c6a;
      border-radius: 2px;
    }

    .chatbox {
      max-height: 580px;
      display: flex;
      flex-direction: column;
      overflow: hidden;
      box-shadow: 0 0 4px rgba(0, 0, 0, .14), 0 4px 8px rgba(0, 0, 0, .28);
    }

    .chat-window {
      padding-top: 20px;
      padding-left: 20px;
      padding-right: 20px;
      flex: auto;
      max-height: calc(100% - 60px);
      background: #2f323b;
      overflow: auto;
    }

    .chat-input {
      flex: 0 0 auto;
      height: 60px;
      background: #40434e;
      border-top: 1px solid #2671ff;
      box-shadow: 0 0 4px rgba(0, 0, 0, .14), 0 4px 8px rgba(0, 0, 0, .28);
    }

    .chat-input input {
      height: 59px;
      line-height: 60px;
      outline: 0 none;
      border: none;
      width: calc(100% - 60px);
      color: white;
      text-indent: 10px;
      font-size: 12pt;
      padding: 0;
      background: #40434e;
    }

    .chat-input button {
      float: right;
      outline: 0 none;
      border: none;
      background: rgba(255, 255, 255, .25);
      height: 40px;
      width: 40px;
      border-radius: 50%;
      padding: 2px 0 0 0;
      margin: 10px;
      transition: all 0.15s ease-in-out;
    }

    .chat-input input[good]+button {
      box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 4px rgba(0, 0, 0, .24);
      background: #2671ff;
    }

    .chat-input input[good]+button:hover {
      box-shadow: 0 8px 17px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }

    .chat-input input[good]+button path {
      fill: white;
    }

    .msg-container {
      position: relative;
      display: inline-block;
      width: 100%;
      margin: 0 0 10px 0;
      padding: 0;
    }

    .msg-box {
      display: flex;
      background: #5b5e6c;
      padding: 10px 10px 0px 10px;
      border-radius: 6px;
      max-width: 80%;
      width: auto;
      float: left;
      box-shadow: 0 0 2px rgba(0, 0, 0, .12), 0 2px 4px rgba(0, 0, 0, .24);
    }

    .user-img {
      display: inline-block;
      border-radius: 50%;
      height: 40px;
      width: 40px;
      background: #2671ff;
      margin: 0 10px 10px 0;
    }

    .flr {
      flex: 1 0 auto;
      display: flex;
      flex-direction: column;
      width: calc(100% - 50px);
    }

    .messages {
      flex: 1 0 auto;

    }

    .msg {
      display: inline-block;
      font-size: 11pt;
      line-height: 13pt;
      color: white;
      margin: 0 0 4px 0;
    }

    .msg:first-of-type {
      margin-top: 8px;
    }

    .timestamp {
      color: rgba(0, 0, 0, .38);
      font-size: 8pt;
      margin-bottom: 10px;
    }

    .username {
      margin-right: 3px;
      color: whitesmoke;
    }

    .posttime {
      margin-left: 3px;
      color: whitesmoke;
    }

    .msg-self .msg-box {
      border-radius: 6px;
      background: #94b3ee;
      float: right;
    }


    .msg-self .user-img {
      margin: 0 0 10px 10px;
    }

    .msg-self .msg {
      text-align: right;
    }

    .msg-self .timestamp {
      text-align: right;
    }

    .nav-brand .nav-item {
      align-self: center;

      padding-bottom: 0px;
    }

    .navbar {
      margin-top: 0px !important;
      padding-top: 0px;
      margin-bottom: 0px !important;
      padding-bottom: 0px;
    }

    #send:hover {
      color: green
    }
  </style>
</head>
<div class="row">
  <div class="col-md-3">
    <div class="wrapper d-flex">
      <div class="sidebar" style="padding-top: 75px;">
        <a href="https://project-hub-2020.herokuapp.com/project/viewinvite" class="btn  btn-round" style="background-color:floralwhite; color: black; width: 75%; margin-left: 30px; ">
          <i class="material-icons" style="color: black;">favorite</i> view invites
        </a>
        <div class="tim-typo" style="margin-left:20px;padding-left: 0px; color: floralwhite;">
          <h3>MY TEAMS</h3>
        </div>
        <h4 class="px-3" style="padding-bottom: 4px; margin-left: 20px; color: #fff;">LEADER</h4>
        <ul style="margin: 0px;">
          <% managing.forEach(leader=>{%>
          <%if( (typeof(project)!='undefined') && String(leader.project_name)===String(project.project_name)){%>
          <li id='<%=leader._id%>' style="padding: 2px; background-color: #000; margin: 0px;"><a aria-disabled href="https://project-hub-2020.herokuapp.com/project/showproject/<%=leader._id%>" style="color: darkgrey; height: 100%;"><%= leader.project_name  %></a>
          </li>
          <%}else{%>
          <li id='<%=leader._id%>' style="padding: 2px; margin: 0px;"><a href="https://project-hub-2020.herokuapp.com/project/showproject/<%=leader._id%>" style="color: darkgrey; height: 100%;"><%= leader.project_name  %></a></li>
          <%}%>
          <%})%>
        </ul>
        <h4 class="px-3" style="padding-bottom: 4px; margin-left: 20px; color: #fff;">MEMBER</h4>
        <ul>
          <% asmember.forEach(member=>{%>
          <form id="project<%=member._id%>" method='POST' action="https://project-hub-2020.herokuapp.com/project/showproject">
            <input name='projectId' style='display:none' value='<%=member._id%>'>
            <%if( (typeof(project)!='undefined') && String(member.project_name)===String(project.project_name)){%>
            <li id='<%=member._id%>' style="padding: 0px; margin: 0px; background-color: #000;"><a href="https://project-hub-2020.herokuapp.com/project/showproject/<%=member._id%>" style="color: darkgray; height: 100%;"><%= member.project_name  %></a></li>
            <%}else{%>
            <li id='<%=member._id%>' style="padding: 0px; margin: 0px;"><a href="https://project-hub-2020.herokuapp.com/project/showproject/<%=member._id%>" style="color: darkgray; height: 100%;"><%= member.project_name  %></a></li>
            <%}%>
          </form>
          <%})%>
        </ul>
      </div>
    </div>
  </div>

  <head>
    <style>
      .abc {
        padding-top: 100px;
        width: 100%;
        min-height: 730px;
        height: 100%;
        background-image: url('/assets/img/backgroundimg.jpg');
        background-size: 100%;
        position: relative;
      }

      .abc:before {

        content: "";
        position: absolute;
        top: 0%;
        bottom: 0%;
        left: 0%;
        right: 0%;
        opacity: 0.1;
        z-index: -1;
        background: whitesmoke;
        background: linear-gradient(90deg, rgb(255, 255, 255), 13%, 100%);
      }
    </style>
  </head>
  <div class="col-md-9 abc">
    <div class="container">
      <section class="chatbox" style="height:600px">
        <section class="chat-window">
          <div id="messages">

          </div>
        </section>
        <div class="chat-input" onsubmit="return false;">
          <input id="message" type="text" autocomplete="on" placeholder="Type a message" />
          <button id="send">
            <svg style="width:24px;height:24px" viewBox="0 0 24 24">
              <path fill="rgba(0,0,0,.38)"
                d="M17,12L12,17V14H8V10H12V7L17,12M21,16.5C21,16.88 20.79,17.21 20.47,17.38L12.57,21.82C12.41,21.94 12.21,22 12,22C11.79,22 11.59,21.94 11.43,21.82L3.53,17.38C3.21,17.21 3,16.88 3,16.5V7.5C3,7.12 3.21,6.79 3.53,6.62L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.79,6.79 21,7.12 21,7.5V16.5M12,4.15L5,8.09V15.91L12,19.85L19,15.91V8.09L12,4.15Z" />
            </svg>
          </button>
          <input type="text" id="userName" style="visibility:hidden" name="" value="<%= user.username %>">
        </div>
      </section>
      <script>
        var socket = io();
        $(() => {
          $("#send").click(() => {
            if ($("#message").val() != '') {
              sendMessage({
                name: $("#userName").val(),
                message: $("#message").val()
              });
              $("#message").val('')
            } else {
              alert('Type a message')
            }
          })
          getMessages();
        })

        socket.on('message', addMessages)

        function addMessages(message) {
          var timeelapsed;
          var dif = Date.now() - Date.parse(message.msg_time)
          if (dif < 3600000) {
            timeelapsed = Math.floor(dif / 60000) + ' minutes ago'
          } else if (dif > 3600000 && dif < 86400000) {
            timeelapsed = Math.floor(dif / 3600000) + ' hours ago'
          } else if (dif > 86400000) {
            var date = new Date(message.msg_time)
            month = date.getUTCMonth() + 1
            timeelapsed = date.getUTCDate() + '/' + month + '/' + date.getUTCFullYear()
          } else {
            timeelapsed = '0 minutes ago'
          }
          if ('<%=user.username%>' == `${message.name}`) {
            $("#messages").append(`<article class="msg-container msg-self" id="msg-0">
      				<div class="msg-box">
      					<div class="flr">
      						<div class="messages">
      							<p class="msg" id="msg-1">
      								${message.message}
      							</p>
      						</div>
      						<span class="timestamp"><span class="username">${message.name}</span>&bull;<span class="posttime">${timeelapsed}</span></span>
      					</div>
      					<img class="user-img" id="user-0" src="//gravatar.com/avatar/56234674574535734573000000000001?d=retro" />
      				</div>
      			</article>`)
          } else {
            $('#messages').append(`<article class="msg-container msg-remote" id="msg-0">
      				<div class="msg-box">
      					<img class="user-img" id="user-0" src="//gravatar.com/avatar/00034587632094500000000000000000?d=retro" />
      					<div class="flr">
      						<div class="messages">
      							<p class="msg" id="msg-0">
      								${message.message}
      							</p>
      						</div>
      						<span class="timestamp"><span class="username">${message.name}</span>&bull;<span class="posttime">${timeelapsed}</span></span>
      					</div>
      				</div>
      			</article>`)
          }
        }

        function getMessages() {
          $.get('https://project-hub-chat-2020.herokuapp.com/messages/<%= project %>', (data) => {
            data.forEach(addMessages);
          })
        }

        function sendMessage(message) {
          $.post('https://project-hub-chat-2020.herokuapp.com/messages/<%= project %>', message)
        }
      </script>
      <%-include("partials/footer")-%>
