<%- include('partials/header'); %>

<head>
  <style>
    .navbar {
      margin-bottom: 0px;
      margin-right: 0px;
      width: 100%;
      padding: 0px;
    }

    .nav-brand .nav-item {
      align-self: center;
      padding-bottom: 0px;
    }

    .abc {
      padding-top: 100px;
      width: 100%;
      min-height: 730px;
      height: 100%;
      background-image: url('/assets/img/backgroundimg.jpg');
      background-size: 100%;
      position: relative;
    }

    .abc:before {

      content: "";
      position: absolute;
      top: 0%;
      bottom: 0%;
      left: 0%;
      right: 0%;
      opacity: 0.1;
      z-index: -1;
      background: whitesmoke;
      background: linear-gradient(90deg, rgb(255, 255, 255), 13%, 100%);
    }
  </style>
</head>

<div class="row">
  <div class="col-md-3">
    <div class="wrapper d-flex">
      <div class="sidebar" style="padding-top: 75px;">
        <a href="https://project-hub-2020.herokuapp.com/project/viewinvite" class="btn  btn-round" style="background-color:floralwhite; color: black; width: 75%; margin-left: 30px; ">
          <i class="material-icons" style="color: black;">favorite</i> view invites
        </a>
        <div class="tim-typo" style="margin-left:20px;padding-left: 0px; color: floralwhite;">
          <h3>MY TEAMS</h3>
        </div>
        <h4 class="px-3" style="padding-bottom: 4px; margin-left: 20px; color: #fff;">LEADER</h4>
        <ul style="margin: 0px;">
          <% managing.forEach(leader=>{%>
          <%if( (typeof(project)!='undefined') && String(leader.project_name)===String(project.project_name)){%>
          <li id='<%=leader._id%>' style="padding: 2px; background-color: #000; margin: 0px;"><a aria-disabled href="https://project-hub-2020.herokuapp.com/project/showproject/<%=leader._id%>" style="color: darkgrey; height: 100%;"><%= leader.project_name  %></a>
          </li>
          <%}else{%>
          <li id='<%=leader._id%>' style="padding: 2px; margin: 0px;"><a href="https://project-hub-2020.herokuapp.com/project/showproject/<%=leader._id%>" style="color: darkgrey; height: 100%;"><%= leader.project_name  %></a></li>
          <%}%>
          <%})%>
        </ul>
        <h4 class="px-3" style="padding-bottom: 4px; margin-left: 20px; color: #fff;">MEMBER</h4>
        <ul>
          <% asmember.forEach(member=>{%>
            <input name='projectId' style='display:none' value='<%=member._id%>'>
            <%if( (typeof(project)!='undefined') && String(member.project_name)===String(project.project_name)){%>
            <li id='<%=member._id%>' style="padding: 0px; margin: 0px; background-color: #000;"><a href="https://project-hub-2020.herokuapp.com/project/showproject/<%=member._id%>" style="color: darkgray; height: 100%;"><%= member.project_name  %></a></li>
            <%}else{%>
            <li id='<%=member._id%>' style="padding: 0px; margin: 0px;"><a href="https://project-hub-2020.herokuapp.com/project/showproject/<%=member._id%>" style="color: darkgray; height: 100%;"><%= member.project_name  %></a></li>
            <%}%>
          <%})%>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-md-9 abc">
    <div class="container">
      <!-- //////////////////////////////////create team modal//////////////////////////////////////////////////////////// -->
      <div class="modal fade" id="createTeamModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-login" role="document">
          <div class="modal-content" style="z-index: 35;">
            <div class="card card-signup card-plain">
              <div class="modal-header">
                <div class="card-header card-header-info text-center">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="material-icons">clear</i></button>
                  <h3>CREATE A TEAM</h3>
                </div>
              </div>
              <div class="modal-body">
                <form class="form" method="POST" action="https://project-hub-2020.herokuapp.com/project/create">
                  <div class="card-body">
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">face</i>
                          </span>
                        </div>
                        <input required type="text" class="form-control" placeholder="Team Name" name="project_name">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group">
                        <div class="input-group-prepend">
                          <span class="input-group-text">
                            <i class="material-icons">mail</i>
                          </span>
                        </div>
                        <select required class="form-control teammates" name="teammates" id="teammates" data-live-search='true' data-style="select-with-transition" multiple title="Select Teammates">
                        </select>
                      </div>
                    </div>
                  </div>
                  <div class="modal-footer justify-content-center">
                    <input type='submit' class="btn btn-info btn-link btn-wd btn-lg" value='CREATE!' />
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!--ADD TASK MODAL-->
      <div class="tim-typo" style="padding-left: 50px; z-index: 0;">
        <h2>MANAGING</h2>
      </div>
      <div class='row'>
        <% managing.forEach(leader=>{%>
        <div class="col-md-4">
          <div class="card card-profile">
            <div class="card-body ">
              <h4 class="card-title"><%= leader.project_name  %></h4>
              <form id="chat<%=leader._id%>" method='POST' action="/chatrooms/<%=leader._id%>|<%=leader.project_name%>/<%=userid%>">
                <input name='projectId' style='display:none' value='<%=leader._id%>'>
                <button id='<%=leader._id%>' class="btn btn-info btn-round" onclick='chat(this)'>CHAT</button>
              </form>
            </div>
          </div>
        </div>
        <%})%>
      </div>
      <div class="tim-typo" style="padding-left: 50px; z-index: 0;">
        <h2>MEMBER</h2>
      </div>
      <div class='row'>
        <% asmember.forEach(member=>{%>
        <div class="col-md-4">
          <div class="card card-profile">
            <div class="card-body ">
              <h4 class="card-title"><%= member.project_name  %></h4>
              <form id="chat<%=member._id%>" method='POST' action="/chatrooms/<%=member._id%>|<%=member.project_name%>/<%=userid%>">
                <input name='projectId' style='display:none' value='<%=member._id%>'>
                <button id='<%=member._id%>' class="btn btn-info btn-round" onclick='chat(this)'>CHAT</button>
              </form>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </div>
</div>
<!--END ADD TASK MODAL-->

<!--------------------->
<script>
  function chat(input) {
    document.getElementById("chat" + input.id).submit();
  }
</script>
<%- include('partials/footer'); %>
